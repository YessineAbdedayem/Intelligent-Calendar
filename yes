def on_closing():
    safe_print("Closing application...")
    if messagebox.askokcancel("Quit", "Do you want to quit?"):
        root.destroy()

root.protocol("WM_DELETE_WINDOW", on_closing)

try:
    root.mainloop()
except Exception as e:
    safe_print(f"üí• Error in Tkinter mainloop: {str(e)}")